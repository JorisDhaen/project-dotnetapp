@using Client.Components.Products
<div class="addressCreate">
    <div style="display: @(Error ? "block" : "none");
                        color: red
                        ">
        @ErrorMsg
    </div>
    <label for="street">Straat:</label>
    <input type="text" id="street" name="street" @bind=Street required />

    <label for="houseNr">Huisnummer:</label>
    <input type="number" id="houseNr" name="houseNr" @bind=HouseNr required />

    <label for="postalCode">Postcode:</label>
    <input type="number" id="postalCode" name="postalCode" @bind=PostalCode required />

    <label for="city">Gemeente:</label>
    <input type="text" id="city" name="city" @bind=City required />

    <button @onclick="submit">Voeg Toe</button>
</div>


